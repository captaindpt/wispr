# Wispr Flow Configuration
# Copy this file to .env and update the values

# AssemblyAI API Key (Required)
# Get your API key from: https://www.assemblyai.com/
ASSEMBLYAI_API_KEY=your_api_key_here

# Trigger Key Options: fn, right_cmd, right_ctrl, caps_lock, f13
WISPR_TRIGGER_KEY=fn

# Log Level: DEBUG, INFO, WARNING, ERROR
WISPR_LOG_LEVEL=INFO

# Log Directory (optional, defaults to ~/.wispr/logs)
WISPR_LOG_DIR=

# Audio Configuration (optional)
WISPR_SAMPLE_RATE=16000
WISPR_AUDIO_BUFFER=800

# Audio Feedback (optional)
WISPR_AUDIO_FEEDBACK=true       # Enable/disable press/release sounds
WISPR_AUDIO_VOLUME=0.5          # Volume for feedback sounds (0.0 to 1.0) 